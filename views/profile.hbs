<link rel="stylesheet" type="text/css" href="style.css">

<div class="container">
	<h1>Welcome {{user.username}}</h1>

{{#if user}}

    <a href="/logout">LogOut</a>
	<a href="/search">Search</a>
{{/if}}</div>

	<div class="public">
		<h3>Create your own Emoji Story</h3>
		<form action="/createstory" method="post">
	 		<input type="publictext" name="name" value="Noun1"><br>
			
			<input type="submit" value="Submit">
		</form>
	</div>

<!--<button class="newJoke">New Joke</button>-->
{{{html}}}

{{#each stories}}
    <li data-storyId="{{this._id}}">
	{{{this.lines}}}	
	<button class="remove" >delete</button>
	<div class="title story">{{this.title}}</div>
	<div class="lines story">{{this.lines}}</div>
	<div class="nouns story">{{this.nouns}}</div>
	<div class="verbs story">{{this.verbs}}</div>
	<div class="adjectives story">{{this.adjectives}}</div>
	
	</li>
{{/each}}  
